        app:iconTint="#000000"
        app:layout_constraintBottom_toTopOf="@+id/tvItem3description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.726"
        app:layout_constraintStart_toEndOf="@+id/ImDress"
        app:layout_constraintTop_toBottomOf="@+id/TvItem1description"
