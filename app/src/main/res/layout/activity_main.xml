        android:insetRight="0dp"
        android:insetBottom="0dp"
        android:text="@string/minus"
        app:icon="@drawable/rectangle_21"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconTint="#000000"
        app:layout_constraintBottom_toTopOf="@+id/tvItem2description"
        app:layout_constraintEnd_toStartOf="@+id/button3"
        app:layout_constraintHorizontal_bias="0.89"
        app:layout_constraintStart_toEndOf="@+id/ImDress"
        app:layout_constraintTop_toBottomOf="@+id/TvItem1description"
