        app:layout_constraintBottom_toTopOf="@+id/tvItem2description"
        app:layout_constraintEnd_toStartOf="@+id/btnItem2plus"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toEndOf="@+id/btnItem2minus"
        app:layout_constraintTop_toBottomOf="@+id/tvItem3description"
