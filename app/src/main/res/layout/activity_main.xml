        android:id="@+id/btnItem3plus"
        android:layout_width="25sp"
        android:layout_height="25sp"
        android:backgroundTint="@color/bntBackgroundColor"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        android:text="@string/minus"
        app:icon="@drawable/rectangle_21"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconTint="#000000"
        app:layout_constraintBottom_toTopOf="@+id/btnBuy"
        app:layout_constraintEnd_toStartOf="@+id/button4"
        app:layout_constraintHorizontal_bias="0.883"
        app:layout_constraintStart_toEndOf="@+id/ImDress"
        app:layout_constraintTop_toBottomOf="@+id/TvItem1description"
        app:layout_constraintVertical_bias="0.935" />

    <Button
        android:id="@+id/btnItem3minus"
        android:layout_width="25sp"
        android:layout_height="25sp"
        android:backgroundTint="@color/bntBackgroundColor"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        android:text="@string/minus"
        app:icon="@drawable/rectangle_35"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconTint="#000000"
        app:layout_constraintBottom_toTopOf="@+id/btnBuy"
        app:layout_constraintEnd_toEndOf="parent"
