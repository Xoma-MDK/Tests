        app:iconPadding="0dp"
        app:iconTint="#000000"
        app:layout_constraintBottom_toTopOf="@+id/tvItem2description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.721"
